            "DownstreamPathTemplate": "/api/auth/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 50000
                }
            ],
            "UpstreamPathTemplate": "/gateway/api/auth/{everything}",
            "UpstreamHttpMethod": [ "POST" ]
        },
        {
            "DownstreamPathTemplate": "api/catalogs/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 50001
                }
            ],
            "UpstreamPathTemplate": "/gateway/api/catalogs/{everything}",
            "UpstreamHttpMethod": [ "POST" ]
        },
        {
            "DownstreamPathTemplate": "api/raffle-events/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 50002
                }
            ],
            "UpstreamPathTemplate": "/gateway/api/raffle-events/{everything}",
            "UpstreamHttpMethod": [ "GET" ]
        }
    ]
}